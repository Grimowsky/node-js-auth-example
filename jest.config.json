{
  "collectCoverage": true,
  "displayName": "Unit Tests",
  "roots": [
    "src/"
  ],
  "collectCoverageFrom": ["src/**/*.{js,ts}"],
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/prisma/"
  ],
  "moduleFileExtensions": [
    "js",
    "ts",
    "tsx"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "clover"
  ],
  "coverageDirectory": "reports/coverage"
}
